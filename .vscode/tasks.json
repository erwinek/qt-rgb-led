{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build qt-rgb-led",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/build.sh",
      "problemMatcher": "$gcc",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-l", "-c"]
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Run qt-rgb-led",
      "type": "shell",
      "command": "cd ${workspaceFolder}/build && sudo ./qt-rgb-led -platform offscreen",
      "problemMatcher": []
    }
  ]
}
